<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_alarm_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_gray_transparent_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/text_distance"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            />

        <ImageView
            android:id="@+id/img_class_type"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="@dimen/item_height_default"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_alarm_animal"
            />

        <TextView
            android:id="@+id/text_save_time"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            />

        <View
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_default"
        android:background="@color/line_horizontal_gray"/>
</LinearLayout>